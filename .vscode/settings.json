{
    // Linting and Formatting
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "notebook.formatOnSave.enabled": true,
    // Auto save files
    "files.autoSave": "off",
    // Git settings
    "git.autofetch": true,
    // Python extension editor
    "[python]": {
        "editor.formatOnType": true
    },
    "cSpell.words": [
        "baei",
        "fmask",
        "mndwi",
        "msavi",
        "ndci",
        "ndvi",
        "ndwi",
        "nodata",
        "pystac",
        "remotesensingtools",
        "stac",
        "swir",
        "xarray"
    ],
}